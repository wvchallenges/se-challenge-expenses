<div class="container" style="padding-top:10%">
	<div class="row">
		<div class="col-md-4 col-md-offset-4 text-center">
			<h2>
				New report
			</h2>
			<%= form_tag import_reports_path, multipart: true, remote: true, class: "new-form" do %>
				<div class="form-group">
					<%= text_field_tag :report_name, nil, class: "form-control text-center", placeholder: "Name of report" %>	
				</div>
				<div class="form-group">
					
					<%= label_tag :file, "Upload file", class: "btn btn-default btn-block" %>
					<%= file_field_tag :file, class: "form-control" %>	
				</div>
				<div class="form-group">
					<%= submit_tag "Submit", class: "btn btn-success btn-block btn-lg" %>	
				</div>
				
			<% end %>
		</div>
	</div>
			
</div>


<div class="container top-container">
	<h1>Wave Accounting challenge</h1>
	<p>Below are the different tax reports created | <%= link_to "New", new_report_path %>	</p>


	

	<table class="table table-hover">
		<tr>
			<td>
				Name
			</td>
			<td>
				Expenses
			</td>
			<td></td>
		</tr>
		<% @reports.each do |report| %>
			<tr>
				<td>
					<%= report.name %>
				</td>
				<td>
					<%= report.expenses.count%>
				</td>
				<td>
					<%= link_to "Show", report_path(report) %>
				</td>
			</tr>
		<% end	%>
	</table>
</div>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @employee.name %>
</p>

<p>
  <strong>Address:</strong>
  <a href="http://maps.google.com/?q=<%= @employee.address %>" target="_blank"><%= @employee.address %></a>
</p>

<div>
  <h2><%= @employee.name %>'s Expenses</h2>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Category</th>
        <th>Expense Description</th>
        <th>Pre-Tax Amount</th>
        <th>Tax Name</th>
        <th>Tax</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% @employee.expenses.each do |expense| %>
        <tr>
          <td><%= expense.date %></td>
          <td>
            <%= link_to(expense.category) do %>
              <%= expense.category.full_name %>
            <% end %>
          </td>
          <td>
            <%= link_to(expense) do %>
              <%= expense.description %>
            <% end %>
          </td>
          <td><%= number_to_currency(expense.amount) %></td>
          <td>
            <%= render partial: "taxes/tax_list", locals: {taxes: expense.taxes} %>
          </td>
          <td><%= number_to_currency(expense.calculate_total_tax_amount()) %></td>
          <td><%= number_to_currency(expense.calculate_total_amount()) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'Edit', edit_employee_path(@employee) %> |
<%= link_to 'All Employees', employees_path %>

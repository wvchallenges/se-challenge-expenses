<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @employee.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @employee.address %>
</p>


<div>
  <h2>All Expenses</h2>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Category</th>
        <th>Expense Description</th>
        <th>Pre-Tax Amount</th>
        <th>Tax Name</th>
        <th>Tax Amount</th>
      </tr>
    </thead>
    <tbody>
      <% @employee.expenses.each do |expense| %>
        <tr>
          <td><%= expense.date %></td>
          <td><%= expense.category.full_name %></td>
          <td>
            <%= link_to(expense) do %>
              <%= expense.description %>
            <% end %>
          </td>
          <td><%= number_to_currency(expense.amount) %></td>
          <td><%= expense.taxes[0].name %></td>
          <td><%= number_to_currency(expense.tax_amounts[0].amount) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'All Employees', employees_path %>

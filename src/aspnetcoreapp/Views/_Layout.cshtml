<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewData["Title"] - waveChallenge</title>
        <meta name="viewport" content="width=device-width, intitial-scale=1.0"/>
        <meta name="description" content="@ViewData["Description"]" />
        <link rel="stylesheet" href="/css/site-main.css" asp-append-version="true"/>
    </head>
    <body>
        <div class="wrapper">
            <header role="banner">
                <nav class="container">
                    <ul>
                        <li> <a asp-controller="Home" asp-action="Index">Wave Challenge</a></li>
                        <li> <a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li> <a asp-controller="Home" asp-action="Expense">Expense</a></li>
                    </ul>
                </nav>
            </header>
            <main class="container">
                <h1>@ViewData["Title"]</h1>
                @RenderBody()
            </main>
        </div>
    <footer>
        <div class="container">
            <span>&copy; @DateTime.Now.Year - waveChallenge</span>
        </div>
    </footer>

    <script src="/js/site.js" asp-append-version="true"></script>
    
    <!--@RenderSection("scripts", required: false)-->
    </body>
</html>
<%= form_for(@employee) do |f| %>
  <%= render 'shared/error_messages', object: @employee %>
  
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :address%>
  <%= f.text_field :address, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
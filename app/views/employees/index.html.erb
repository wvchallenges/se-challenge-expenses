<% provide(:title, "Manage Employee") %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h3>Create Employee</h3>
      <%= link_to "Create Employee", new_employee_path, class: "btn btn-success" %>
      <br/><br/>
    <h3>Employee List</h3>
    <br/>
  </div>
</div>
<% if @employees.count == 0 %>
  <div class="row center">
    <h3>Currently No Employee in Database</h3>
  </div>
<% else %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2 center">
      <table class="table table-striped">
        <tr>
          <td><b>No.</b></td>
          <td><b>Name</b></td>
          <td><b>Address</b></td>
          <td><b>Options</b></td>
        </tr>
        <% @employees.each_with_index do |employee, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= employee.name %></td>
          <td><%= employee.address %></td>
          <td>
            <%= link_to "show", employee_path(employee) %>
            <%= link_to "edit", edit_employee_path(employee) %>
            <%= link_to "delete", employee, method: :delete,
            data: { confirm: "Related expense records will also be deleted. Continue?" } %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
<% end %>
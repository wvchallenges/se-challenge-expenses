<p id="notice"><%= notice %></p>

<h1>Expenses Files</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses_files.each do |expenses_file| %>
      <tr>
        <td><%= expenses_file.name %></td>
        <td><%= expenses_file.description %></td>
        <td><%= link_to 'Show', expenses_file %></td>
        <td><%= link_to 'Edit', edit_expenses_file_path(expenses_file) %></td>
        <td><%= link_to 'Destroy', expenses_file, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


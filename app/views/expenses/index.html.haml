%h1 Expenses

= paginate @expenses

%table.table.table-condensed
  %thead
    %tr
      %th Date
      %th Employee
      %th Category
      %th
        .text-right
          Subtotal
      %th
        .text-right
          Tax
      %th
        .text-right
          Total
  %tbody
    - @expenses.each do |expense|
      %tr
        %td= expense.date.strftime('%Y-%m-%d')
        %td= expense.employee.name
        %td= expense.category.name
        %td
          .text-right
            = money_without_cents_and_with_symbol(expense.pre_tax_amount)
        %td
          .text-right
            = money_without_cents_and_with_symbol(expense.tax_amount)
        %td
          .text-right
            = money_without_cents_and_with_symbol(expense.pre_tax_amount + expense.tax_amount)

= paginate @expenses

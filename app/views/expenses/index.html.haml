%h1 Listing expenses

= link_to 'Import Expenses', new_expense_path

%hr

%table.table.table-bordered
  %thead
    %tr
      %th Month
      %th Total Expenses
  %tbody

%hr

%table.table.table-bordered
  %thead
    %tr
      %th Date
      %th Category
      %th Employee
      %th Employee address
      %th Expense description
      %th Pre tax amount
      %th Tax
      %th Tax amount
      %th
      %th
      %th

  %tbody
    - @expenses.each do |expense|
      %tr
        %td= expense.date
        %td= expense.category_id
        %td= expense.employee_id
        %td= expense.employee_address
        %td= expense.expense_description
        %td= expense.pre_tax_amount
        %td= expense.tax_id
        %td= expense.tax_amount
        %td= link_to 'Show', expense
        %td= link_to 'Edit', edit_expense_path(expense)
        %td= link_to 'Destroy', expense, :method => :delete, :data => { :confirm => 'Are you sure?' }

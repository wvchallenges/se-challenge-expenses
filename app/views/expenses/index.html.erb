<div style="position: absolute;top: 20%;left: 10%;width: 1000px;height: 400px;margin: -100px 0 0 -100px;text-align:center;"> 

  <% if ! session[:current_total].nil? %>
    <h1> Last upload expenses Total </h1>
    <%= session[:current_total] %>
  <%end%>
  <% if ! @total_expenses.nil? %>
    <h1> Total Expenses </h1>
    <%= @total_expenses.round(2) %>
  <%end%>
  <h1>Listing expenses</h1>

  <table style="text-align:center;">
    <thead>
      <tr>    
        <th>Date</th>
        <th>Category</th>
        <th>Name</th>
        <th>Address</th>
        <th>Expense Description</th>
        <th>Pre Tax Amount</th>
        <th>Tax Name</th>
        <th>Tax Amount</th>
        <th colspan="3"> Operations</th>
      </tr>
    </thead>

    <tbody>
      <% @expenses.each do |expense| %>
        <tr>
          <td><%= expense.date %></td>
          <td><%= expense.category %></td>
          <td><%=  expense.employee.name %></td>
          <td><%=  expense.employee.address %></td>
          <td><%= expense.expense_description %></td>
          <td><%= expense.pre_tax_amount %></td>
          <td><%= expense.tax_name %></td>
          <td><%= expense.tax_amount %></td>
          <td><%= link_to 'Show', expense %></td>
          <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
          <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td>Expenses Total </td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td> <%= @total_pre_tax_amount.round(2) %></td>
        <td></td>
        <td> <%= @total_tax_amount.round(2) %></td>
        <td> <%= @total_expenses.round(2) %></td>
      </tr>
    </tfoot>
  </table>

  <br>

  <%= link_to 'New Expense', new_expense_path %>
</div>

